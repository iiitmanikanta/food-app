<% provide(:title, 'Add Products') %>

<%# If any form errors then it will be displayed %>
<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this from being saved:</h2>

    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if is_agent? %>
  <h1>Add Product</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@product) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :image_url %>
        <%= f.text_field :image_url %>

        <%= f.label :description %>
        <%= f.text_field :description %>

        <%= f.label :price %>
        <%= f.text_field :price %>

        <%= f.submit "Add new product", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% else %>
  <h1>Access forbidden</h1>
  <p>Only agent can add products</p>
<% end %>
